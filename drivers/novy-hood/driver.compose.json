{
  "id": "novy-hood",
  "class": "light",
  "name": {
    "en": "Novy Intouch hood",
    "nl": "Novy Intouch afzuiging"
  },
  "capabilities": [
    "onoff",
    "light",
    "speed"
  ],
  "capabilitiesOptions": {
    "onoff": {
      "setOnDim": false,
      "greyout": false
    },
    "light": {
      "setOnDim": false,
      "greyout": false
    }
  },
  "mobile": {
    "components": [
      {
        "id": "icon",
        "capabilities": [ "onoff", "light", "speed" ]
      },
      {
        "id": "toggle",
        "capabilities": [ "onoff" ]
      },
      {
        "id": "sensor",
        "capabilities": [ "speed" ],
        "options": {
          "icons": {
            "speed": "assets/icon.svg"
          }
        }
      },
      {
        "id": "slider",
        "capabilities": [ "speed" ],
        "options": {
          "showTitle": false
        }
      },
      {
        "id": "toggle",
        "capabilities": [ "light" ]
      }
    ]
  },
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "General settings",
        "nl": "Algemene instellingen"
      },
      "children": [
        {
          "id": "onoff_action",
          "type": "radio",
          "label": {
            "en": "On/off action",
            "nl": "Aan/uit actie"
          },
          "hint": {
            "en": "What action should be executed when pressing the on/off button?",
            "nl": "Wat moet er gebeuren als de aan/uit knop wordt ingedrukt?"
          },
          "value": "device",
          "values": [
            {
              "id": "device",
              "label": {
                "en": "Hood & Lights",
                "nl": "Afzuiging & Lampen"
              }
            },
            {
              "id": "light",
              "label": {
                "en": "Lights only",
                "nl": "Alleen lampen"
              }
            },
            {
              "id": "hood",
              "label": {
                "en": "Hood only",
                "nl": "Alleen afzuiging"
              }
            }
          ]
        },
        {
          "id": "run_out",
          "type": "checkbox",
          "label": {
            "en": "Turn off with run-out mode?",
            "nl": "Uitschakelen met naloopstand?"
          },
          "hint": {
            "en": "When enabled the device will delay shut down for 10 min.",
            "nl": "Met naloopstand zal het apparaat het uitschakelen 10 min uitstellen."
          },
          "value": false
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Current state",
        "nl": "Huidige status"
      },
      "children": [
        {
          "id": "light",
          "type": "checkbox",
          "value": false,
          "label": {
            "en": "The lights are currently on?",
            "nl": "De lampen staan na aan?"
          }
        },
        {
          "id": "speed_level",
          "type": "dropdown",
          "value": "speed_0",
          "label": {
            "en": "Current hood speed",
            "nl": "Huidige snelheid van de afzuiging"
          },
          "values": [
            {
              "id": "speed_0",
              "label": {
                "en": "Off",
                "nl": "Uit"
              }
            },
            {
              "id": "speed_1",
              "label": {
                "en": "Level 1",
                "nl": "Niveau 1"
              }
            },
            {
              "id": "speed_2",
              "label": {
                "en": "Level 2",
                "nl": "Niveau 2"
              }
            },
            {
              "id": "speed_3",
              "label": {
                "en": "Level 3",
                "nl": "Niveau 3"
              }
            },
            {
              "id": "speed_4",
              "label": {
                "en": "POWER level (max)",
                "nl": "POWER niveau (max)"
              }
            }
          ]
        }
      ]
    }
  ],
  "$flow": {
    "triggers": [
      {
        "id": "novy-hood:received",
        "title": {
          "en": "Command received",
          "nl": "Commando ontvangen"
        },
        "args": [
          {
            "name": "command",
            "type": "dropdown",
            "values": [
              {
                "id": "on",
                "label": {
                  "en": "Turned on",
                  "nl": "Aangezet"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Turned off",
                  "nl": "Uitgezet"
                }
              },
              {
                "id": "off_run_out",
                "label": {
                  "en": "Turned off with run out mode",
                  "nl": "Uitgezet met naloopstand"
                }
              },
              {
                "id": "toggle_onoff",
                "label": {
                  "en": "Toggled between on/off",
                  "nl": "Gewisseld tussen aan/uit"
                }
              },
              {
                "id": "toggle_onoff_run_out",
                "label": {
                  "en": "Toggled between on/off with run-out mode",
                  "nl": "Gewisseld tussen aan/uit met naloopstand"
                }
              },
              {
                "id": "light_on",
                "label": {
                  "en": "Light on",
                  "nl": "Lamp aan"
                }
              },
              {
                "id": "light_off",
                "label": {
                  "en": "Light off",
                  "nl": "Lamp uit"
                }
              },
              {
                "id": "toggle_light",
                "label": {
                  "en": "Toggled light on/off",
                  "nl": "Gewisseld tussen lamp aan/uit"
                }
              },
              {
                "id": "increase",
                "label": {
                  "en": "Speed increased",
                  "nl": "Snelheid verhoogd"
                }
              },
              {
                "id": "decrease",
                "label": {
                  "en": "Speed decreased",
                  "nl": "Snelheid verlaagd"
                }
              },
              {
                "id": "speed_0",
                "label": {
                  "en": "Hood off",
                  "nl": "Afzuiging uit"
                }
              },
              {
                "id": "speed_1",
                "label": {
                  "en": "Hood level 1",
                  "nl": "Afzuiging niveau 1"
                }
              },
              {
                "id": "speed_2",
                "label": {
                  "en": "Hood level 2",
                  "nl": "Afzuiging niveau 2"
                }
              },
              {
                "id": "speed_3",
                "label": {
                  "en": "Hood level 3",
                  "nl": "Afzuiging niveau 3"
                }
              },
              {
                "id": "speed_4",
                "label": {
                  "en": "Hood POWER level (max)",
                  "nl": "Afzuiging POWER niveau (max)"
                }
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "novy-hood:send",
        "title": {
          "en": "Send command to the hood",
          "nl": "Stuur commando naar de afzuiging"
        },
        "args": [
          {
            "name": "command",
            "type": "dropdown",
            "values": [
              {
                "id": "on",
                "label": {
                  "en": "Turn on",
                  "nl": "Zet aan"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Turn off",
                  "nl": "Zet uit"
                }
              },
              {
                "id": "off_run_out",
                "label": {
                  "en": "Turn off with run out mode",
                  "nl": "Zet uit met naloopstand"
                }
              },
              {
                "id": "toggle_onoff",
                "label": {
                  "en": "Toggle on/off",
                  "nl": "Wissel tussen aan/uit"
                }
              },
              {
                "id": "toggle_onoff_run_out",
                "label": {
                  "en": "Toggle on/off with run-out mode",
                  "nl": "Wissel tussen aan/uit met naloopstand"
                }
              },
              {
                "id": "light_on",
                "label": {
                  "en": "Turn light on",
                  "nl": "Zet lamp aan"
                }
              },
              {
                "id": "light_off",
                "label": {
                  "en": "Turn light off",
                  "nl": "Zet lamp uit"
                }
              },
              {
                "id": "toggle_light",
                "label": {
                  "en": "Toggle light on/off",
                  "nl": "Wissel tussen lamp aan/uit"
                }
              },
              {
                "id": "increase",
                "label": {
                  "en": "Increase speed",
                  "nl": "Snelheid verhogen"
                }
              },
              {
                "id": "decrease",
                "label": {
                  "en": "Decrease speed",
                  "nl": "Snelheid verlagen"
                }
              },
              {
                "id": "speed_0",
                "label": {
                  "en": "Hood off",
                  "nl": "Afzuiging uit"
                }
              },
              {
                "id": "speed_1",
                "label": {
                  "en": "Hood level 1",
                  "nl": "Afzuiging niveau 1"
                }
              },
              {
                "id": "speed_2",
                "label": {
                  "en": "Hood level 2",
                  "nl": "Afzuiging niveau 2"
                }
              },
              {
                "id": "speed_3",
                "label": {
                  "en": "Hood level 3",
                  "nl": "Afzuiging niveau 3"
                }
              },
              {
                "id": "speed_4",
                "label": {
                  "en": "Hood POWER level (max)",
                  "nl": "Afzuiging POWER niveau (max)"
                }
              },
              {
                "name": "device",
                "type": "device",
                "filter": "driver_id=novy-hood"
              }
            ]
          }
        ]
      }
    ]
  },
  "$pairOptions": {
    "rf.done": {
      "title": "Custom title test"
    }
  },
  "$extends": [
    "defaults",
    "rf.remote"
  ]
}
